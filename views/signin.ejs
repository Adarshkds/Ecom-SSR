<% layout('./boilerplate/boilerplate') -%>


    <h1 class="m-3" style="display: flex; align-items: center; justify-content: center;">SIGN IN</h1>
    <form class="mx-auto m-3" style="width: 50vw; display: flex; flex-direction: column; gap: 2rem; padding-top: 2rem;" action="/products/account/signin" method="post">
        <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label">Name:</label>
            <div class="col-sm-10">
                <input name="username" type="text" class="form-control" id="username" placeholder="Name">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password:</label>
            <div class="col-sm-10">
                <input name="password" type="password" class="form-control" id="inputPassword3" placeholder="Password">
            </div>
        </div>

        <div class="form-group" style="display: flex; width: 50%;">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Sign in</button>
                <a style="padding-left: 2rem;" href="/products/account/signup">Not registered yet?</a>
            </div>
        </div>
    </form>